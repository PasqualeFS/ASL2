{% include 'header.twig' %}
<h1>{{recipe.title}}</h1>

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if is_favorited %}
    <p><a href="{{ path('recipe_remove_favorite', {'recipe_id': recipe.id}) }}">Remove Favorite</a></p>
    {% else %}
    <p><a href="{{ path('recipe_add_favorite', {'recipe_id': recipe.id}) }}">Add Favorite</a></p>
    {% endif %}
{% endif %}

<p>{{recipe.ingredients|nl2br}}</p>
<p>{{recipe.instructions|nl2br}}</p>
<p>{{recipe.category}}</p>
<p>{{recipe.type}}</p>
{% include 'footer.twig' %}